<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

</script>

<footer>
	<div class="row">
		<div class="column small-12 medium-6 large-3">
			<h3>Stay Connected</h3>
				<a href="https://twitter.com/sydney_sister"><img src="http://i.imgur.com/uTsRGMO.png"/></a>
				<a href="http://www.facebook.com/sydneysister"><img src="http://i.imgur.com/zbv7QNb.png"/></a>
				<a href="http://sydneysister.tumblr.com"><img src="http://i.imgur.com/YQXooXp.png"/></a>
				<a href="http://pinterest.com/sydneysister"><img src="http://i.imgur.com/DWhK1TO.png"/></a>
				<a href="http://instagram.com/sydney_sister"><img src="http://i.imgur.com/RYBC1lz.png"/></a>
		</div>
		<div class="column small-12 medium-6 large-3">
			<h3>Customer Care</h3>
				<li><%= link_to "Contact Us", contact_path %></li>
				<li><%= link_to "Shipping", shipping_path %></li>
				<li><%= link_to "Sizing Information", sizing_path %></li>
				<li><%= link_to "Returns/Exchanges", returns_path %></li>
				<li><%= link_to "Payments", paymentinfo_path %></li>
		</div>
		<div class="column small-12 medium-6 large-3">
			<h3>About</h3>
				<li><%= link_to "About us", about_path %></li>
				<li><%= link_to "Blog", blog_path %></li>
				<li><%= link_to "Competitions", competitions_path %></li>
		</div>
		<div class="column small-12 medium-6 large-3">
			<div class="fb-like-box" data-href="https://www.facebook.com/sydneysister" data-width="350px" data-colorscheme
			="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="false">
		</div>
		<div class="clear"></div>
	</div>
</footer>


	  </div>
<%= javascript_include_tag "application" %> 
  </body>
</html>




