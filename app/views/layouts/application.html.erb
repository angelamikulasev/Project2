						<li><%= link_to "Playsuits", about_path %></li>
						<li><%= link_to "Accessories", about_path %></li>
						<li><%= link_to "Outerwear", about_path %></li>
						<li><%= link_to "Sale", about_path %></li>
					<div class="clear"></div>
  				</ul>
  				<div class="menu-bar"></div>
				</nav>
			</div>
		</div> 
	</div>
	</header>


	<%= yield %>


<footer>
	<div class="big-footer">
		<div class="first-col-footer-links">
			<h3>Stay Connected</h3>
				<a href="https://twitter.com/sydney_sister"><img src="http://i.imgur.com/uTsRGMO.png"/></a>
